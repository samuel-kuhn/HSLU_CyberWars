server {
  listen 80;
  listen [::]:80;
  server_name zhhk.ch;
  
  root /var/www/html;
  index index.html;
  
  # API proxy - this should be matched first
  location /api/ {
    proxy_pass http://127.0.0.1:8089;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
  }
  
  # Static assets â€” set cache headers
  location ~* \.(?:css|js)$ {
    try_files $uri =404;
    add_header Cache-Control "public, max-age=604800";
  }
  
  location ~* \.(?:png|jpg|jpeg|gif|webp|svg|ico)$ {
    try_files $uri =404;
    add_header Cache-Control "public, max-age=2592000";
  }
  
  # 404 page
  location = /404.html { internal; }
  error_page 404 /404.html;
  
  # Static files - this should be last
  location / {
    try_files $uri =404;
  }
  
  # Security headers
  add_header X-Content-Type-Options nosniff;
  add_header X-Frame-Options SAMEORIGIN;
  add_header Referrer-Policy strict-origin-when-cross-origin;
  add_header Permissions-Policy "geolocation=(), microphone=(), camera=()";
  
  # Gzip compression
  gzip on;
  gzip_types text/plain text/css application/javascript application/json image/svg+xml;
  gzip_min_length 1024;
  
  access_log /var/log/nginx/premier_auto.access.log;
  error_log  /var/log/nginx/premier_auto.error.log warn;
}
